import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		int cod, quant;
		double valor, total = 0;
		String nome = "";
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite a quantidade dos produtos");
		quant = sc.nextInt();
		System.out.println("Digite o código do produto");
		cod = sc.nextInt();
		
		if (cod == 1) {
			valor = 4.0;
			nome = "Cachorro Quente";
		}
		
		else if (cod == 2) {
			valor = 4.5;
			nome = "X-Salada";
		}
		
		else if (cod == 3) {
			valor = 5.0;
			nome = "X-Bacon";
		}
		
		else if (cod == 4) {
			valor = 2.0;
			nome = "Torrada Simples";
		}
		
		else if (cod == 5) {
			valor = 1.5;
			nome = "Refrigerante";
		}
		
		else {
			System.out.println("Código Inválido, inicie o programa novamente!");
		}
		
		System.out.println("Pedido efetuado com sucesso!");
		System.out.printf("%d %c ---------- Valor Total: R$ %.2f", quant, nome, total);
		
		sc.close();

	}

}
